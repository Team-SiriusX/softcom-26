// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// AUTHENTICATION & USER MANAGEMENT
// ============================================

model User {
  id            String        @id @default(cuid())
  name          String
  email         String        @unique
  emailVerified Boolean       @default(false)
  image         String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  role          UserRole      @default(USER)
  
  // Stripe & Subscription
  stripeCustomerId String?    @unique
  subscriptionTier SubscriptionTier @default(FREE)
  
  // Relations
  sessions      Session[]
  accounts      Account[]
  businesses    Business[]
  subscription  Subscription?

  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("verification")
}

// ============================================
// BUSINESS & ACCOUNTING CORE
// ============================================

model Business {
  id              String   @id @default(cuid())
  name            String
  email           String?
  phone           String?
  address         String?
  taxId           String?
  currency        String   @default("PKR")
  fiscalYearStart Int      @default(1) // Month number (1-12)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Relations
  ledgerAccounts      LedgerAccount[]
  transactions        Transaction[]
  categories          Category[]
  journalEntries      JournalEntry[]
  clients             Client[]
  invoices            Invoice[]
  clientPaymentHistories ClientPaymentHistory[]
  agentExecutionLogs  AgentExecutionLog[]

  @@map("business")
}

model LedgerAccount {
  id              String            @id @default(cuid())
  code            String            // Account code (e.g., "1000", "2100")
  name            String            // Account name (e.g., "Cash", "Accounts Payable")
  description     String?
  type            AccountType       // Asset, Liability, Equity, Revenue, Expense
  subType         AccountSubType    // Current Asset, Fixed Asset, etc.
  normalBalance   BalanceType       // DEBIT or CREDIT
  isActive        Boolean           @default(true)
  currentBalance  Decimal           @default(0) @db.Decimal(15, 2)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  businessId      String
  business        Business          @relation(fields: [businessId], references: [id], onDelete: Cascade)
  parentAccountId String?
  parentAccount   LedgerAccount?    @relation("AccountHierarchy", fields: [parentAccountId], references: [id])
  subAccounts     LedgerAccount[]   @relation("AccountHierarchy")
  
  // Relations
  journalEntries  JournalEntry[]
  transactions    Transaction[]

  @@unique([businessId, code])
  @@index([businessId, type])
  @@index([businessId, isActive])
  @@map("ledger_account")
}

model Category {
  id           String        @id @default(cuid())
  name         String
  description  String?
  type         CategoryType  // INCOME, EXPENSE, TRANSFER
  color        String?       // For UI visualization
  icon         String?       // For UI visualization
  isActive     Boolean       @default(true)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  businessId   String
  business     Business      @relation(fields: [businessId], references: [id], onDelete: Cascade)
  parentId     String?
  parent       Category?     @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children     Category[]    @relation("CategoryHierarchy")
  
  // Relations
  transactions Transaction[]

  @@unique([businessId, name])
  @@index([businessId, type])
  @@map("category")
}

// ============================================
// CLIENTS & INVOICES
// ============================================

model Client {
  id          String    @id @default(cuid())
  name        String
  email       String?
  phone       String?
  address     String?
  taxId       String?
  notes       String?
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  businessId  String
  business    Business  @relation(fields: [businessId], references: [id], onDelete: Cascade)
  
  // Relations
  invoices    Invoice[]

  @@unique([businessId, email])
  @@index([businessId, isActive])
  @@map("client")
}

model Invoice {
  id              String         @id @default(cuid())
  invoiceNumber   String         // e.g., "INV-001"
  issueDate       DateTime
  dueDate         DateTime
  status          InvoiceStatus  @default(DRAFT)
  subtotal        Decimal        @db.Decimal(15, 2)
  taxAmount       Decimal        @default(0) @db.Decimal(15, 2)
  discount        Decimal        @default(0) @db.Decimal(15, 2)
  total           Decimal        @db.Decimal(15, 2)
  paidAmount      Decimal        @default(0) @db.Decimal(15, 2)
  notes           String?
  terms           String?        // Payment terms
  attachmentUrl   String?        // URL to uploaded invoice file
  reminderSent    Boolean        @default(false)
  reminderDate    DateTime?      // When to send reminder
  
  // CollectorAI fields
  lastFollowUpAt    DateTime?
  followUpCount     Int             @default(0)
  escalationLevel   EscalationLevel @default(NONE)
  agentNotes        String?         @db.Text
  nextActionDate    DateTime?
  
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  businessId      String
  business        Business       @relation(fields: [businessId], references: [id], onDelete: Cascade)
  clientId        String
  client          Client         @relation(fields: [clientId], references: [id])
  
  // Relations
  items           InvoiceItem[]
  collectionActions CollectionAction[]
  paymentPlan       PaymentPlan?

  @@unique([businessId, invoiceNumber])
  @@index([businessId, status])
  @@index([businessId, dueDate])
  @@index([clientId])
  @@index([nextActionDate])
  @@map("invoice")
}

model InvoiceItem {
  id          String   @id @default(cuid())
  description String
  quantity    Decimal  @db.Decimal(10, 2)
  unitPrice   Decimal  @db.Decimal(15, 2)
  amount      Decimal  @db.Decimal(15, 2)
  invoiceId   String
  invoice     Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  @@map("invoice_item")
}

// ============================================
// TRANSACTION & JOURNAL ENTRIES (Double-Entry)
// ============================================

model Transaction {
  id              String            @id @default(cuid())
  date            DateTime
  description     String
  amount          Decimal           @db.Decimal(15, 2)
  type            TransactionType   // INCOME, EXPENSE, TRANSFER
  referenceNumber String?           // Check number, invoice number, etc.
  notes           String?
  isReconciled    Boolean           @default(false)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  businessId      String
  business        Business          @relation(fields: [businessId], references: [id], onDelete: Cascade)
  ledgerAccountId String
  ledgerAccount   LedgerAccount     @relation(fields: [ledgerAccountId], references: [id])
  categoryId      String?
  category        Category?         @relation(fields: [categoryId], references: [id])
  
  // Relations
  journalEntries  JournalEntry[]

  @@index([businessId, date])
  @@index([businessId, type])
  @@index([businessId, ledgerAccountId])
  @@index([businessId, categoryId])
  @@map("transaction")
}

model JournalEntry {
  id             String      @id @default(cuid())
  date           DateTime
  entryNumber    String      // Sequential entry number for audit trail
  description    String
  entryType      EntryType   @default(STANDARD) // STANDARD, ADJUSTING, CLOSING
  isPosted       Boolean     @default(true)
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  businessId     String
  business       Business    @relation(fields: [businessId], references: [id], onDelete: Cascade)
  transactionId  String?
  transaction    Transaction? @relation(fields: [transactionId], references: [id])
  ledgerAccountId String
  ledgerAccount  LedgerAccount @relation(fields: [ledgerAccountId], references: [id])
  
  // Double-entry fields
  debitAmount    Decimal     @default(0) @db.Decimal(15, 2)
  creditAmount   Decimal     @default(0) @db.Decimal(15, 2)

  @@index([businessId, entryNumber])
  @@index([businessId, date])
  @@index([businessId, ledgerAccountId])
  @@index([transactionId])
  @@map("journal_entry")
}

// ============================================
// SUBSCRIPTION & BILLING
// ============================================

model Subscription {
  id                    String            @id @default(cuid())
  userId                String            @unique
  user                  User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Stripe details
  stripeSubscriptionId  String?           @unique
  stripePriceId         String?
  stripeCurrentPeriodEnd DateTime?
  
  // Subscription details
  tier                  SubscriptionTier
  status                SubscriptionStatus @default(ACTIVE)
  billingCycle          BillingCycle?     // MONTHLY or ANNUAL
  
  // Usage tracking
  aiQueriesUsed         Int               @default(0)
  aiQueriesLimit        Int               // 0 for FREE, 30 for PRO, 150 for BUSINESS
  transactionsUsed      Int               @default(0)
  transactionsLimit     Int               // 50 for FREE, unlimited (-1) for paid
  businessAccountsUsed  Int               @default(0)
  businessAccountsLimit Int               // 1 for FREE, 3 for PRO, unlimited (-1) for BUSINESS
  
  // Reset tracking
  lastResetDate         DateTime          @default(now())
  
  createdAt             DateTime          @default(now())
  updatedAt             DateTime          @updatedAt
  canceledAt            DateTime?
  
  @@index([userId])
  @@index([stripeSubscriptionId])
  @@map("subscription")
}

// ============================================
// ENUMS
// ============================================

enum UserRole {
  USER
  ADMIN
}

enum SubscriptionTier {
  FREE
  PRO
  BUSINESS
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  PAST_DUE
  INCOMPLETE
  TRIALING
}

enum BillingCycle {
  MONTHLY
  ANNUAL
}

enum AccountType {
  ASSET
  LIABILITY
  EQUITY
  REVENUE
  EXPENSE
}

enum AccountSubType {
  // Assets
  CURRENT_ASSET
  FIXED_ASSET
  OTHER_ASSET
  
  // Liabilities
  CURRENT_LIABILITY
  LONG_TERM_LIABILITY
  OTHER_LIABILITY
  
  // Equity
  OWNERS_EQUITY
  RETAINED_EARNINGS
  
  // Revenue
  OPERATING_REVENUE
  OTHER_REVENUE
  
  // Expenses
  OPERATING_EXPENSE
  COST_OF_GOODS_SOLD
  OTHER_EXPENSE
}

enum BalanceType {
  DEBIT
  CREDIT
}

enum CategoryType {
  INCOME
  EXPENSE
  TRANSFER
}

enum TransactionType {
  INCOME
  EXPENSE
  TRANSFER
}

enum EntryType {
  STANDARD
  ADJUSTING
  CLOSING
}

enum InsightType {
  TREND
  ANOMALY
  OPPORTUNITY
  RISK
  RECOMMENDATION
}

enum InvoiceStatus {
  DRAFT
  SENT
  VIEWED
  PARTIAL
  PAID
  OVERDUE
  CANCELLED
  DISPUTED
}

// ============================================
// COLLECTORAI MODELS
// ============================================

enum EscalationLevel {
  NONE
  FRIENDLY_REMINDER
  FIRM_REMINDER
  URGENT_NOTICE
  FINAL_NOTICE
  LEGAL_WARNING
}

model CollectionAction {
  id          String                @id @default(cuid())
  invoiceId   String
  invoice     Invoice               @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  
  executionLogId  String?
  executionLog    AgentExecutionLog?  @relation(fields: [executionLogId], references: [id], onDelete: SetNull)
  
  actionType  CollectionActionType
  channel     String                @default("EMAIL")
  status      ActionStatus          @default(PENDING)
  
  // Email Details
  emailSubject  String?
  emailBody     String?              @db.Text
  sentAt        DateTime?
  sentToEmail   String?
  emailSent     Boolean               @default(false)
  
  // AI Context
  aiReasoning   String?              @db.Text
  aiPrompt      String?              @db.Text
  
  scheduledFor  DateTime?
  executedAt    DateTime?
  result        String?              @db.Text
  errorMessage  String?              @db.Text
  
  metadata      Json?
  
  createdAt   DateTime              @default(now())
  updatedAt   DateTime              @updatedAt
  
  @@index([invoiceId, status])
  @@index([executionLogId])
  @@index([scheduledFor])
  @@index([createdAt])
  @@map("collection_action")
}

enum CollectionActionType {
  SEND_INVOICE
  FRIENDLY_REMINDER
  FIRM_REMINDER
  URGENT_NOTICE
  FINAL_NOTICE
  LEGAL_WARNING
  PAYMENT_PLAN_OFFER
  THANK_YOU
  MANUAL_REVIEW
}

enum ActionStatus {
  PENDING
  SCHEDULED
  SENT
  DELIVERED
  OPENED
  CLICKED
  REPLIED
  COMPLETED
  FAILED
  CANCELLED
}

model PaymentPlan {
  id          String    @id @default(cuid())
  invoiceId   String    @unique
  invoice     Invoice   @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  
  totalAmount       Float
  installments      Int
  installmentAmount Float
  frequency         String  // WEEKLY, BI_WEEKLY, MONTHLY
  
  startDate         DateTime
  nextDueDate       DateTime
  status            String   @default("PROPOSED") // PROPOSED, ACCEPTED, ACTIVE, COMPLETED, DEFAULTED
  
  installmentsPaid  Int      @default(0)
  amountPaid        Float    @default(0)
  
  proposedAt        DateTime @default(now())
  acceptedAt        DateTime?
  completedAt       DateTime?
  
  metadata          Json?
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@index([status])
  @@index([nextDueDate])
  @@map("payment_plan")
}

model ClientPaymentHistory {
  id              String   @id @default(cuid())
  businessId      String
  business        Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  
  clientEmail     String
  clientName      String
  
  // Stats (updated by agent)
  totalInvoicesSent      Int     @default(0)
  totalInvoicesPaid      Int     @default(0)
  totalAmountInvoiced    Float   @default(0)
  totalAmountPaid        Float   @default(0)
  
  avgDaysToPayment       Float   @default(0)
  paidOnTimeCount        Int     @default(0)
  paidLateCount          Int     @default(0)
  
  currentOverdueCount    Int     @default(0)
  currentOverdueAmount   Float   @default(0)
  
  reliabilityScore       Float   @default(1.0) // 0-1
  riskLevel              String  @default("LOW") // LOW, MEDIUM, HIGH
  
  lastInvoiceDate        DateTime?
  lastPaymentDate        DateTime?
  
  lastUpdated            DateTime @default(now())
  
  @@unique([businessId, clientEmail])
  @@index([businessId, riskLevel])
  @@index([reliabilityScore])
  @@map("client_payment_history")
}

model AgentExecutionLog {
  id              String   @id @default(cuid())
  businessId      String
  business        Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  
  executionType   String   // SCHEDULED, MANUAL, WEBHOOK
  status          String   // RUNNING, COMPLETED, FAILED
  
  invoicesProcessed  Int   @default(0)
  actionsCreated     Int   @default(0)
  emailsSent         Int   @default(0)
  errors             Int   @default(0)
  
  startedAt       DateTime @default(now())
  completedAt     DateTime?
  durationMs      Int?
  
  errorLog        String?  @db.Text
  summaryReport   String?  @db.Text
  
  actions         CollectionAction[]
  
  @@index([businessId, startedAt])
  @@map("agent_execution_log")
}

